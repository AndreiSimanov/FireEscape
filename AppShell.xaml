<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FireEscape.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:lang="clr-namespace:FireEscape.Resources.Languages"
    xmlns:local="clr-namespace:FireEscape.Views"
    Shell.FlyoutBehavior="Disabled"
    Title= "{x:Static lang:AppResources.AppTitle}">

    <ShellContent  Title="{x:Static lang:AppResources.AppTitle}" ContentTemplate="{DataTemplate local:ProtocolsMainPage}" Route="ProtocolsMainPage" />
    <ShellContent Title="{x:Static lang:AppResources.ProtocolPageTitle}" ContentTemplate="{DataTemplate local:ProtocolPage}" Route="ProtocolPage" />
    <ShellContent Title="{x:Static lang:AppResources.FireEscapePageTitle}" ContentTemplate="{DataTemplate local:FireEscapePage}" Route="FireEscapePage" />
    <ShellContent Title="{x:Static lang:AppResources.UserAccountsPageTitle}" ContentTemplate="{DataTemplate local:UserAccountsPage}" Route="UserAccountsPage" />
    <ShellContent Title="{x:Static lang:AppResources.UserAccountPageTitle}" ContentTemplate="{DataTemplate local:UserAccountPage}" Route="UserAccountPage" />
</Shell>
